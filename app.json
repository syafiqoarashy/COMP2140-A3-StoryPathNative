{
  "expo": {
    "name": "StoryPath Player",
    "slug": "COMP2140-A3-StoryPathNative",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-image-picker",
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Allow StoryPath Player to access your location while using the app."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow StoryPath Player to access your camera for scanning QR codes."
        }
      ]
    ],
    "scheme": "storypathapp"
  }
}
